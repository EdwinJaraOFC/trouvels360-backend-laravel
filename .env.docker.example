# Ejemplo de variables para entorno Docker 
APP_NAME=Trouvels360
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=trouvels360_demo
DB_USERNAME=laravel
DB_PASSWORD=secret
DB_ROOT_PASSWORD=CHANGE_ME_ROOT_PASSWORD   # Password del usuario root 

# Ajusta según necesidades
LOG_CHANNEL=stack
QUEUE_CONNECTION=database
FILESYSTEM_DISK=local

# Mail / Otros (dummy)
MAIL_MAILER=log
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# Notas:
# - DB_USERNAME / DB_PASSWORD: credenciales de la aplicación Laravel.
# - DB_ROOT_PASSWORD: se usa solo para administración (phpMyAdmin o conexión directa). Cámbialo SIEMPRE.
